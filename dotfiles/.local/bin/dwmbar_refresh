get_volume() { \
	echo "ğŸ”Š"
	pactl get-sink-volume 0 | awk '{print $5}'
}

get_thermals() { \
	echo "ï‹‡"
	acpi -t | awk '{print $4}'
	echo "ï¨ƒ"
}

get_battery() { \
	echo "ğŸ”‹"	
	acpi | awk '{print $4}'
}

get_brightness() { \
	echo "ïª§"
	xrandr --verbose | awk '/Brightness/ {print $2 * 100; exit}'
}

get_mem() { \
	echo "ğŸ§ "
	free | grep Mem | awk '{ printf("%.4f%\n", $3/$2 * 100.0) }'
}

get_time() { \
	echo "â°"
	date | awk '{print $4}'
}

get_date() { \
	echo "ğŸ“…"
	date | awk '{printf("%s %s %s\n", $1, $2, $3)}'
}

status() { \
	#get_thermals
	get_mem
	#get_brightness
	get_volume
	#get_battery
	get_date
	get_time
}

xsetroot -name "  $(status | tr '\n' ' ')"	

